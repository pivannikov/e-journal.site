<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="{{ asset('js/custom.js') }}"></script>

    <title>{% block title %}Электронный журнал{% endblock %}</title>

</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 bg-secondary min-vh-100 shadow" id="left_nav">
            <nav class="nav flex-column">
                <a class="nav-link text-white mb-2" aria-current="page" href="{{ path('main') }}">Main</a>
                <a class="nav-link text-white hover-overlay" href="{{ path('all_groups') }}">Study groups</a>
                <a class="nav-link text-white hover-overlay ms-3 mb-2" href="{{ path('add_group') }}">+ add group</a>
                <a class="nav-link text-white" href="{{ path('all_students') }}">Students</a>
                <a class="nav-link text-white mb-2 ms-3" href="{{ path('add_student') }}">+ add student</a>
                <a class="nav-link text-white" href="{{ path('all_disciplines') }}">Disciplines</a>
                <a class="nav-link text-white mb-2 ms-3" href="{{ path('add_discipline') }}">+ add discipline</a>
                <a class="nav-link text-white mb-2" href="#">Statistics</a>
            </nav>
        </div>
        <div class="col-md-10 p-3">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
