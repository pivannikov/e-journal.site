{% extends 'layout.html.twig' %}

{% block title %}Groups{% endblock %}
{% block content %}
    All GROUPS
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Group number</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <th scope="col">Select</th>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td><a href="{{ path('group', {id: group.id}) }}">{{ group.number }}</a></td>
                <td><a class="btn btn-success btn-sm" href="#" role="button">edit</a></td>
                <td><a class="btn btn-danger btn-sm" href="#" role="button">delete</a></td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="group_{{ group.id }}" id="group_{{ group.id }}">
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}